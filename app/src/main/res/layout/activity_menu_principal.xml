<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cronometro_jpg"
    tools:context=".MenuPrincipalActivity">

    <Button
        android:id="@+id/btnTemporizador"
        android:layout_width="247dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#B3A7A7"
        android:text="TEMPORIZADOR"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnAlarma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvUsuario" />

    <Button
        android:id="@+id/btnCronometro"
        android:layout_width="247dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:backgroundTint="#B3A7A7"
        android:text="CRONOMETRO"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnRelojMundial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlarma" />

    <Button
        android:id="@+id/btnAlarma"
        android:layout_width="247dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#B3A7A7"
        android:text="ALARMA"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnCronometro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTemporizador" />

    <Button
        android:id="@+id/btnRelojMundial"
        android:layout_width="247dp"
        android:layout_height="0dp"
        android:layout_marginBottom="201dp"
        android:backgroundTint="#B3A7A7"
        android:text="RELOJ MUNDIAL"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCronometro" />

    <TextView
        android:id="@+id/txvUsuario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="@font/aldrich"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTemporizador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>