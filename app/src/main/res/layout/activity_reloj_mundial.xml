<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondologin_jpg"
    tools:context=".RelojMundialActivity">

    <TextView
        android:id="@+id/txvRelojMundial"
        android:layout_width="273dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/alata"
        android:text="RELOJ MUNDIAL"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvBuenosAires"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="33dp"
        android:fontFamily="@font/alata"
        android:text="Buenos Aires"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txvMadrid"
        app:layout_constraintEnd_toEndOf="@+id/txvMadrid"
        app:layout_constraintEnd_toStartOf="@+id/txvFechaHoraBuenosAires"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvLosAngeles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="270dp"
        android:fontFamily="@font/alata"
        android:text="Tokyo"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txvFechaHoraTokyo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvMonteVideo" />

    <TextView
        android:id="@+id/txvMonteVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="33dp"
        android:fontFamily="@font/alata"
        android:text="Montevideo"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txvLosAngeles"
        app:layout_constraintEnd_toEndOf="@+id/txvLosAngeles"
        app:layout_constraintEnd_toStartOf="@+id/txvFechaHoraMonteVideo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvMadrid" />

    <TextView
        android:id="@+id/txvMadrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/alata"
        android:text="Madrid"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txvMonteVideo"
        app:layout_constraintEnd_toEndOf="@+id/txvMonteVideo"
        app:layout_constraintEnd_toStartOf="@+id/txvFechaHoraMadrid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvBuenosAires" />

    <TextView
        android:id="@+id/txvFechaHoraBuenosAires"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="33dp"
        android:fontFamily="@font/alata"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txvFechaHoraMadrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvBuenosAires"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvFechaHoraMadrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/alata"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txvFechaHoraMonteVideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvMadrid"
        app:layout_constraintTop_toBottomOf="@+id/txvFechaHoraBuenosAires" />

    <TextView
        android:id="@+id/txvFechaHoraMonteVideo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/alata"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/txvFechaHoraTokyo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvMonteVideo"
        app:layout_constraintTop_toBottomOf="@+id/txvFechaHoraMadrid" />

    <TextView
        android:id="@+id/txvFechaHoraTokyo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="271dp"
        android:fontFamily="@font/alata"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvLosAngeles"
        app:layout_constraintTop_toBottomOf="@+id/txvFechaHoraMonteVideo" />
</androidx.constraintlayout.widget.ConstraintLayout>